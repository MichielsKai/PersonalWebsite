---
const allPosts = Object.values(
    import.meta.glob("../pages/posts/*.md", { eager: true })
);
---

<main>
    <h2>Posts</h2>
    <ul>
        {
            allPosts.map((post: any) => (
                <li>
                    <a href={post.url}>
                        {post.frontmatter.pubDate.slice(0, 10)} -{" "}
                        {post.frontmatter.title}
                    </a>
                </li>
            ))
        }
    </ul>
</main>
